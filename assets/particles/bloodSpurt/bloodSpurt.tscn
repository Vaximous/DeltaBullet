resource_name = "BloodSpurt_Small"
script/source = "extends GPUParticles3D
@export var minParticles : int = 5
@export var maxParticles : int = 8


func _ready()->void:
	material_override = gameManager.bloodSpurts.pick_random()
	play()
	await get_tree().process_frame
	if !finished.is_connected(_destroy):
		finished.connect(_destroy)
	get_tree().create_timer(2).timeout.connect(_destroy)

func play()->void:
	show()
	process_mode = Node.PROCESS_MODE_INHERIT
	amount = randi_range(minParticles,maxParticles)
	restart()
	%bloodSmoke.restart()

func _destroy()->void:
	process_mode = Node.PROCESS_MODE_DISABLED
	hide()
"

